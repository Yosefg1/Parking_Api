generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id                  Int       @id @default(autoincrement()) 
  createdAt           DateTime  @default(now())
  carHolderName       String
  carModel            String
  licensePlate        String
  parkingPermit       String?
}

model Floor {
  id                  Int       @id @default(autoincrement())
  createdAt           DateTime  @default(now())
  floorLevel          Int 
  totalSpaces         Int
  availableSpaces     Int
  isAccessible        Boolean?
}

model Park {
  id                  Int       @id @default(autoincrement())
  parkedAt           DateTime   @default(now())
  carId              Int    
  floorId            Int      
  checkoutTime       DateTime?
}

model Payment {
  id                  Int       @id @default(autoincrement())
  createdAt           DateTime  @default(now())
  amount              Float   
  carId               Int      
  paymentMethod       String?
  paymentStatus       String?
}


